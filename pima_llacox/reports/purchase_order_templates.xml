<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_pima" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//h2[1]" position="replace"></xpath>
        <xpath expr="//div[@class='row']" position="before">
            <div class="text-right">
                <br/>
                <h2 t-if="o.state != 'draft'">Orden de compra #<span t-field="o.name"/></h2>
                <h2 t-if="o.state == 'draft'">Solicitud de presupuesto #<span t-field="o.name"/></h2>
            </div>
        </xpath>
    </template>
</odoo>